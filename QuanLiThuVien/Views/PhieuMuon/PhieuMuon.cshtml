@model IEnumerable<QuanLiThuVien.Models.Phieumuon>

@{
    ViewBag.Title = "PhieuMuon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Phiếu Mượn</h2>


<table class="table">
    <tr>
        <th>
            Mã Sách
        </th>
        <th>
            Tên Sách
        </th>
       
        <th>
            Nhà Xuất Bản
        </th>
        <th>
            Hình Ảnh
        </th>

        <th>
            
            @Html.DisplayNameFor(model => model.iSoluong)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaSach)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.TenSach)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.NhaXuatBan)
            </td>
            <td>
                <img src="@item.HinhAnh" width="120px" height="140px" />
            </td>

            @using (Html.BeginForm("Cập Nhật Phiếu Mượn", "PhieuMuon", new { @id = item.MaSach }))
            {

                <td><input type="number" min="1" name="txtSoLg" value="@item.iSoluong" /></td>
                <td><a href="@Url.Action("Detail","Thuvien", new {id=item.MaSach})"> Chi tiet</a> | @Html.ActionLink("Xóa", "XoaPhieuMuon", new { @id = item.MaSach })</td>
                <td><input type="submit" value="Cập Nhật" class="btn btn-success" /></td>
            }
        </tr>
    }
    <tr style="font-weight:bold; text-align:left; color:red">
        <td colspan="2"> Số Loại Sách: @ViewBag.Tongsoluongsanpham</td>
        <td colspan="3"> Số Lượng Sách: @ViewBag.Tongsoluong</td>

    </tr>

    <tr style="font-weight:bold; color:blue; text-align:right ">
        <td colspan="5">
            @Html.ActionLink("Xóa Phiếu Mượn", "XoaTatCaPhieuMuon")
        </td>
    </tr>
    <tr style="font-weight:bold; color:yellow; text-align:right ">
        <td colspan="5">
            @Html.ActionLink("Mượn Sách", "Phieumuon", "PhieuMuon")
        </td>
    </tr>


</table>