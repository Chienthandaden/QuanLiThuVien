@model IEnumerable<QuanLiThuVien.Models.NhanVien>
@{
    ViewBag.Title = "Nhan Vien";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nhân Viên</h2>
<p>
    @Html.ActionLink("Thêm Nhân Viên Mới", "Create")
</p>
<table class="table">
    <tr>
        <th> Họ Tên </th>
        <th> Ngày Sinh </th>
        <th> Giới Tính</th>
        <th> Địa Chỉ</th>
        <th> Email </th>
        

        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
            <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>


            <td>@Html.DisplayFor(modelItem => item.GioiTinh)</td>
            <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaNhanVien }) |
                @Html.ActionLink("Detail", "Detail", new { id = item.MaNhanVien }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaNhanVien })
            </td>
        </tr>
    }
</table>